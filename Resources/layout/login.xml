<?xml version="1.0" ?>
<uitree>
  <KDialogBase fixSize="370,250" windowStyle="ToolWindow" skinName="winframe" backgroundColor="white">
    <KSpacer layout="VBox">
      <KFrameItem layout="VBox" fixHeight="30" frameType="TileH" imagePath="res:/Resources/image/login_bk.png">
        <KSpacer layout="HBox" margins="5,0,5,0">
          <KImageItem fixWidth="20" imagePath="res:/Resources/image/loginlogo.png"/>
          <KLabel text="用户登录" bold="true" fontSize="13" textColor="255,255,255"/>
          <KPushButton objectName="btnClose" skinName="winclose"/>
        </KSpacer>
        <KSpacer layout="VBox">
          <KSpacer layout="HBox" margins="50,40,0,4">
            <KFrameItem layout="VBox" fixSize="230,66" itemSpacing="5">
              <KSpacer layout="HBox" fixHeight="33" margins="0,2,0,2">
                <KLabel text="帐号：" textColor="133,133,133" autoAdjust="true" itemSpacing="5"/>
                <KxHistoryComboBox objectName="nameCombox" skinName="combox"/>
              </KSpacer>
              <KSpacer layout="HBox" margins="0,2,0,2">
                <KLabel text="密码：" textColor="133,133,133" autoAdjust="true" itemSpacing="5"/>
                <KFrameItem layout="VBox" frameColor="218,218,218|18,167,236" acceptHover="true" frameSwitch="true" framePixel="1" frameType="Rectangle">
                  <KLineEdit objectName="passwordEdit" mode="Password" textMargins="5,0,2,0"/>                  
                </KFrameItem>
              </KSpacer>            
            </KFrameItem>
            <KSpacer layout="VBox" fixWidth="-1">
              <KLabel text="忘记密码？" handCursorOnHover="true" underlineOnHover="true" click="true" textColor="133,133,133" link="http://home.17keke.com/init.do?method=forgetPwd" autoAdjust="true"/>
              <KLabel objectName="btnRegister" text="用户注册" handCursorOnHover="true" underlineOnHover="true" click="true" textColor="133,133,133" autoAdjust="true"/>
            </KSpacer>
           </KSpacer> 
          <KSpacer layout="HBox" fixHeight="36" itemSpacing="15" spacing="20">
            <KSpacer/>
            <KCheckButton objectName="btnRecordPassword" text="记住密码" label.textColor="133,133,133" skinName="check" autoAdjust="true"/>
            <KCheckButton objectName="btnAutoLogin" text="自动登录" label.textColor="133,133,133" skinName="check" autoAdjust="true"/>
            <KSpacer/>
          </KSpacer>
          <KSpacer layout="HBox">
            <KSpacer/>
            <KPushButton objectName="btnUserLogin" fixSize="168,30" text="登录" skinName="btncommon"/>
            <KSpacer/>
          </KSpacer>
        </KSpacer>
      </KFrameItem>
    </KSpacer>
  </KDialogBase>
</uitree>
